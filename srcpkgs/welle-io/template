build_style=cmake
configure_args="
 -Wno-dev
 $(vopt_bool airspy AIRSPY)
 $(vopt_bool rtlsdr RTLSDR)
 $(vopt_bool soapysdr SOAPYSDR)"
hostmakedepends="pkg-config xxd qt6-base qt6-tools qt6-declarative-host-tools"
makedepends="qt6-base-devel qt6-declarative-devel qt6-multimedia-devel
 qt6-charts-devel
 fftw-devel lame-devel alsa-lib-devel faad2-devel mpg123-devel
 $(vopt_if airspy libairspy-devel) $(vopt_if rtlsdr librtlsdr-devel)
 $(vopt_if soapysdr SoapySDR-devel) "
depends="qt5-graphicaleffects"
short_desc="DAB/DAB+ Software Defined Radio (SDR)"
maintainer="Orphaned <orphan@voidlinux.org>"
